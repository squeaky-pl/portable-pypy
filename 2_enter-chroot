#!/bin/bash

if [ $# -lt 1 ]; then
    echo 'Usage'
    echo '2_enter-chroot chroot'
    exit
fi

dest=$(readlink -f $1)

mount --bind /dev $dest/dev
mount --bind /proc $dest/proc
mount --bind /sys $dest/sys

ARCH=$(cat $dest/opt/prefix/arch)

HOME=/root setarch $ARCH chroot $dest /bin/bash

umount $dest/dev
umount $dest/proc
umount $dest/sys
